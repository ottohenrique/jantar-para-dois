<p><%= flash[:error] %></p>

<div class='row'>
  <div class="card">
    <div class="card-image">
      <%= image_tag 'couple.jpg', style: 'max-width: 100%; max-height: 100%' %>
    </div>
    <div class="card-action">
      <%= form_with(url: "/sessions/login" ) do %>

      <div>
        <%= label_tag :username, 'Seu nome' %>
        <%= text_field_tag :username, 'otto.henrique' %>
      </div>
      <div>
        <%= label_tag :password  %>
        <%= password_field_tag :password, '12345' %>
      </div>
      <%= submit_tag "Login", class: 'waves-effect waves-light btn-large' %>
      <%end%>
    </div>
  </div>
</div>