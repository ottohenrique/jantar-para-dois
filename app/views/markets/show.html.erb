<div class="row">
  <div class="card">
    <div class="card-content">
      <h3 class="card-title">Confirme sua receita</h3>
      <ul class="collection  with-header">
        <li class="collection-header"><%= @recipe.title %></li>
        <% @recipe.ingredients.split("\n").each do |item| %>
        <li class="collection-item"><%= item %></li>
        <% end %>
      </ul>
    </div>
    <div class="card-action">
      <%=
        link_to "https://api.whatsapp.com/send?phone=5511955522425&text=#{@order_text}",
        target: '_blank',
        class: 'waves-effect waves-light btn-large green accent-3' do
      %>
        Fazer pedido <%= fa_icon "whatsapp" %>
      <% end %>
    </div>
  </div>
</div>