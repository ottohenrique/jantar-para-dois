<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-image">
        <%= image_tag  @recipes.first.image_url, style: 'max-width: 100%; max-height: 100%' %>
      </div>
      <div class="card-action">
        <h3 class="card-title"><%= @recipes.first.title %></h3>
        <%= link_to "Ver receita", recipe_path(@recipes.first.id), class: 'waves-effect waves-light btn-large' %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <ul class="collection with-header">
      <li class="collection-header">Outras receitas</li>
      <% @recipes.each do |recipe| %>
      <li class="collection-item"><%= link_to recipe.title, recipe_path(recipe) %></li>
      <% end %>
    </ul>
  </div>
</div>